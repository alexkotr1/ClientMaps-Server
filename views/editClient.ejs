<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Επεξεργασία Πελάτη</title>
    <link rel="stylesheet" href="/styles/editClient.css">
</head>
<body>
    <div class="container">
        <h1>Επεξεργασία Πελάτη</h1>
        <form>
            <div class="form-group">
                <label for="name">Ονοματεπώνυμο</label>
                <input type="text" id="name" name="name" value="<%= data.name %>">
            </div>
            <div class="form-group">
                <label for="phone">Τηλέφωνο</label>
                <input type="text" id="phone" name="phone" value="<%= data.phone %>">
            </div>
            <div class="form-group">
                <label for="comments">Σχόλια</label>
                <input type="text" id="comments" name="comments" value="<%= data.comments %>">
            </div>
            <div class="form-group">
                <label>Ονόματα</label>
                <ul id="names-list">
                    <% data.names.forEach(function(name, index) { %>
                      <li data-index="<%= index %>">
                        <input type="text" name="names[]" value="<%= name %>">
                        <button class="remove-name-btn" type="button">Αφαίρεση</button>
                      </li>
                    <% }); %>
                  </ul>
                <button id="add-name-btn" type="button">Προσθήκη ονόματος</button>
            </div>
            <div class="form-group">
                    <label for="location">Τοποθεσία</label>
                    <input id="search-box" type="text" placeholder="Αναζήτηση τοποθεσίας" hidden="true">
                    <div id="map" style="width: 100%; height: 400px; margin-top:30px;" latitude="<%=data.latitude%>" longitude="<%=data.longitude%>"></div>
            </div>
            <button type="button" id="submit" style="margin-top:30px">Αποθήκευση</button>
        </form>
    </div>
    <script>
        function getEJSData(){
            let data = `<%- JSON.stringify(data) %>`
            try {
                data = JSON.parse(data)
            }
            catch{
                alert("Κάτι πήγε στραβά")
            }
            return data;
            
        }
    </script>
    <script src="/scripts/locationPicker.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBGq4XWeoz4xR_yycQlWePstiy8uFzjDYs&libraries=places&callback=initMap"></script>
    <script src="/scripts/editClient.js"></script>

</body>
</html>
